[color]
	ui = true
	branch = auto
	diff = auto
	interactive = auto
	status = auto
[diff]
	external = meld
[color "branch"]
	current = yellow reverse
	local = yellow
	remote = green
[alias]
	st = status
	ci = commit
	co = checkout
	br = branch
	lga = log --decorate --stat --graph --pretty=format:\"%d %Cgreen%h%Creset (%ar - %Cred%an%Creset), %s%n\"
	lg = log --decorate --graph --format='%Cgreen%h%Creset %ad %C(cyan)%an%Creset - %s%C(red)%d%Creset' --date=short
