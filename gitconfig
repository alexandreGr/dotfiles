[color]
	ui = true
	branch = auto
	diff = auto
	interactive = auto
	status = auto

[core]
    editor = vim
    whitespace = trailing-space,space-before-tab
    autocrlf = input

[help]
    autocorrect = 1

[merge]
	tool = vimdiff

[color "branch"]
	current = yellow reverse
	local = yellow
	remote = green

[sendemail]
    smtpserver = smtp.gmail.com
    smtpuser = lesmyrmidons@gmail.com
    smtpserverport = 587
    smtpencryption = tls

[alias]
	st = status
	ci = commit
	co = checkout
	br = branch
	lga = log --decorate --stat --graph --pretty=format:\"%d %Cgreen%h%Creset (%ar - %Cred%an%Creset), %s%n\"
	lg = log --decorate --graph --format='%Cgreen%h%Creset %ad %C(cyan)%an%Creset - %s%C(red)%d%Creset' --date=short
	l = log --graph --pretty=format:'%Cred%h%Creset - %C(bold blue)%an%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr)' --abbrev-commit
	stat = shortlog -sne
